<ApiRequest xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <ApiKey>{{ apiKey }}</ApiKey>
    <Data>
        <Source>
            <Url>{{ url }}</Url>
            {% if user %}
                <Username>{{ user }}</Username>
                <Password>{{ password }}</Password>
            {% endif %}
        </Source>
        <Target>
            <Name>{{ target }}</Name>
        </Target>
        <ImportSetup>
            <Mode>{{ settings['mode'] }}</Mode>
            <Delimiter>{{ settings['delimiter'] }}</Delimiter>
            <Quote>{{ settings['quote'] }}</Quote>
            <Escape>{{ settings['escape'] }}</Escape>
            <Comment>{{ settings['comment'] }}</Comment>
            <Encoding>{{ settings['encoding'] }}</Encoding>
            <StartingLine>{{ settings['startingLine'] }}</StartingLine>
        </ImportSetup>
    </Data>
</ApiRequest>